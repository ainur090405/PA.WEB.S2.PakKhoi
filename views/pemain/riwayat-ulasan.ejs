<%- include('../partials/_header', { title: title }) %>
<%- include('../partials/_messages') %>

<!-- DataTables CSS (Bootstrap 5) -->
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<style>
  .table thead { background: #28c76f; color: #fff; }
  .table th { font-weight: 600; text-transform: uppercase; font-size: 0.9rem; }
  .card-header { background: #f8f9fa; font-weight: 600; border-bottom: 2px solid #28c76f; }
  .badge { padding: 6px 10px; font-size: 0.85rem; }

  .table td, .table th {
    white-space: nowrap;
    vertical-align: middle;
  }

  @media (max-width: 768px) {
    .table td, .table th { white-space: normal; }
  }

  .payment-cell {
    display: inline-flex;
    gap: 0.6rem;
    align-items: center;
    flex-wrap: nowrap;
    vertical-align: middle;
  }
  .payment-cell .meta { display:inline-flex; align-items:center; gap:0.35rem; font-size:0.92rem; }
  .payment-cell .btn-detail { margin-left: 0.25rem; }

  /* Sedikit rapihin input search DataTables */
  div.dataTables_wrapper div.dataTables_filter input {
    margin-left: 0.5rem;
    border-radius: 999px;
    padding: 0.15rem 0.75rem;
  }
</style>

<div class="container py-4">

  <!-- ========================= -->
  <!-- RIWAYAT PEMESANAN -->
  <!-- ========================= -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header">
      <i class="bi bi-journal-text me-2 text-success"></i> Riwayat Pemesanan (<%= reservasi.length %>)
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle" id="riwayatTable">
          <thead>
            <tr>
              <th>Arena</th>
              <th>Tgl. Main</th>
              <th>Jam</th>
              <th>Status</th>
              <th>Pembayaran</th>
              <th>Jumlah</th>
              <th>Ulasan</th>
            </tr>
          </thead>
          <tbody>
            <% if (reservasi.length > 0) { %>
              <% reservasi.forEach(r => { %>
                <tr>
                  <td><strong><%= r.nama_arena %></strong></td>
                  <td><%= r.tanggal ? new Date(r.tanggal).toLocaleDateString('id-ID') : '-' %></td>
                  <td>
                    <%= r.jam_mulai ? r.jam_mulai.substring(0,5) : '-' %> -
                    <%= r.jam_selesai ? r.jam_selesai.substring(0,5) : '-' %>
                  </td>
                  <td>
                    <% if(r.status == 'selesai') { %>
                      <span class="badge bg-success">Selesai</span>
                    <% } else if (r.status == 'disetujui') { %>
                      <span class="badge bg-info text-dark">Disetujui</span>
                    <% } else if (r.status == 'menunggu') { %>
                      <span class="badge bg-warning text-dark">Menunggu</span>
                    <% } else { %>
                      <span class="badge bg-danger">Ditolak</span>
                    <% } %>
                  </td>

                  <!-- PEMBAYARAN -->
                  <td>
                    <% const metode = r.pembayaran_metode; %>

                    <% if (metode === 'cod') { %>
                      <div class="payment-cell">
                        <span class="badge bg-primary">COD</span>
                        <span class="meta">
                          <small class="text-muted">
                            <%= r.pembayaran_status || 'unpaid' %>
                          </small>
                        </span>
                      </div>

                    <% } else if (metode === 'transaksi') { %>
                      <% const buktiExists = !!r.pembayaran_bukti; %>
                      <div class="payment-cell">
                        <span class="badge bg-secondary">Transfer</span>

                        <span class="meta">
                          <% if (buktiExists) { %>
                            <small class="text-success">
                              <i class="bi bi-check-circle"></i> Bukti Ada
                            </small>
                          <% } else { %>
                            <small class="text-danger">
                              <i class="bi bi-exclamation-triangle"></i> Belum Upload
                            </small>
                          <% } %>
                        </span>

                        <button class="btn btn-sm btn-info btn-detail"
                          data-bs-toggle="modal"
                          data-bs-target="#modalDetailPembayaran"
                          data-id="<%= r.id_reservasi %>">
                          <i class="bi bi-eye"></i> Detail
                        </button>
                      </div>

                    <% } else { %>
                      <span class="badge bg-light text-dark">-</span>
                    <% } %>
                  </td>

                  <td>
                    <% const jml = r.pembayaran_jumlah || 0; %>
                    <%= jml > 0 ? 'Rp ' + Number(jml).toLocaleString('id-ID') : '-' %>
                  </td>

                  <!-- ULASAN -->
                  <td>
                    <% if (r.status === 'selesai') { %>
                      <% if (!r.sudah_ulasan) { %>
                        <button class="btn btn-sm btn-success" data-bs-toggle="modal"
                          data-bs-target="#modalUlasan"
                          data-id="<%= r.id_reservasi %>"
                          data-nama="<%= r.nama_arena %>"
                          data-mode="create">
                          <i class="bi bi-star me-1"></i> Beri Ulasan
                        </button>
                      <% } else { %>
                        <button class="btn btn-sm btn-warning text-white" data-bs-toggle="modal"
                          data-bs-target="#modalUlasan"
                          data-id="<%= r.id_reservasi %>"
                          data-nama="<%= r.nama_arena %>"
                          data-mode="edit">
                          <i class="bi bi-pencil-square me-1"></i> Edit
                        </button>
                      <% } %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>

                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="7" class="text-center text-muted">Belum ada riwayat pemesanan.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- ========================= -->
  <!-- RIWAYAT ULASAN SAYA -->
  <!-- ========================= -->
  <div class="card shadow-sm border-0">
    <div class="card-header">
      <i class="bi bi-star-fill me-2 text-warning"></i> Riwayat Ulasan Saya (<%= ulasan.length %>)
    </div>

    <div class="card-body" id="ulasanContainer">
      <% if (ulasan.length > 0) { %>
        <% ulasan.forEach(u => { %>
          <div class="mb-3 border-bottom pb-2 ulasan-item">
            <strong><%= u.nama_arena %></strong>
            <div>
              <% for(let i = 0; i < u.rating; i++) { %>
                <i class="bi bi-star-fill text-warning"></i>
              <% } %>
              <% for(let i = 0; i < (5 - u.rating); i++) { %>
                <i class="bi bi-star text-warning"></i>
              <% } %>
            </div>
            <p class="mb-0 fst-italic text-muted">"<%= u.komentar %>"</p>
          </div>
        <% }) %>

        <!-- Pagination Ulasan -->
        <div id="ulasanPagination"
             class="d-flex justify-content-between align-items-center mt-3"
             style="display:none;">
          <button class="btn btn-sm btn-outline-secondary" id="prevUlasan">Sebelumnya</button>
          <span class="small text-muted" id="infoUlasan"></span>
          <button class="btn btn-sm btn-outline-secondary" id="nextUlasan">Selanjutnya</button>
        </div>

      <% } else { %>
        <p class="text-center text-muted mb-0">Belum ada ulasan.</p>
      <% } %>
    </div>
  </div>

</div>

<!-- ========================= -->
<!-- MODAL ULASAN -->
<!-- ========================= -->
<div class="modal fade" id="modalUlasan" tabindex="-1">
  <div class="modal-dialog">
    <form id="formUlasan" method="POST">
      <div class="modal-content">

        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Beri Ulasan</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" id="id_reservasi" name="id_reservasi">

          <div class="mb-3">
            <label class="form-label">Arena</label>
            <input type="text" id="nama_arena" class="form-control" disabled>
          </div>

          <div class="mb-3">
            <label class="form-label">Rating</label>
            <select class="form-select" name="rating" required>
              <option value="">Pilih Rating</option>
              <% for(let i=1;i<=5;i++) { %>
                <option value="<%= i %>"><%= i %> â˜…</option>
              <% } %>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Komentar</label>
            <textarea class="form-control" name="komentar"></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-success" type="submit">Simpan</button>
          <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        </div>

      </div>
    </form>
  </div>
</div>

<!-- ========================= -->
<!-- MODAL DETAIL PEMBAYARAN -->
<!-- ========================= -->
<div class="modal fade" id="modalDetailPembayaran" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">
          <i class="bi bi-receipt me-2"></i>
          Detail Pembayaran
        </h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body" id="detailPembayaranContent">
        <div class="text-center">
          <div class="spinner-border text-primary"></div>
          <p class="mt-2">Memuat...</p>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- jQuery & DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
  const modalUlasan = document.getElementById('modalUlasan');
  const modalDetailPembayaran = document.getElementById('modalDetailPembayaran');

  // untuk simpan id interval countdown biar bisa di-clear saat modal ditutup
  let uploadCountdownInterval = null;

  // SETUP ULASAN (modal beri/edit ulasan)
  if (modalUlasan) {
    modalUlasan.addEventListener('show.bs.modal', e => {
      const btn = e.relatedTarget;
      const id = btn.dataset.id;
      const nama = btn.dataset.nama;
      const mode = btn.dataset.mode;

      const form = document.getElementById('formUlasan');
      form.reset();
      document.getElementById('nama_arena').value = nama;
      document.getElementById('id_reservasi').value = id;

      form.action =
        mode === 'edit'
        ? `/pemain/ulasan/update/${id}`
        : `/pemain/ulasan/create/${id}`;
    });
  }

  // Saat modal detail pembayaran DIBUKA
  if (modalDetailPembayaran) {
    modalDetailPembayaran.addEventListener('show.bs.modal', e => {
      const id = e.relatedTarget.dataset.id;
      const box = document.getElementById('detailPembayaranContent');

      // kalau ada countdown sebelumnya, clear dulu
      if (uploadCountdownInterval) {
        clearInterval(uploadCountdownInterval);
        uploadCountdownInterval = null;
      }

      box.innerHTML = `
        <div class="text-center">
          <div class="spinner-border text-primary"></div>
          <p class="mt-2">Memuat...</p>
        </div>
      `;

      fetch(`/pemain/detail-pembayaran/${id}`)
        .then(res => res.json())
        .then(x => {
          if (!x.success) {
            box.innerHTML = '<div class="alert alert-danger">Gagal memuat data</div>';
            return;
          }

          const p = x.pembayaran || {};
          const r = x.reservasi || {};

          const jumlah = (p.jumlah != null ? p.jumlah : (r.pembayaran_jumlah || 0));

          let html = `
            <h5>Informasi Reservasi</h5>
            <table class="table table-sm">
              <tr><td>Arena</td><td>: ${r.nama_arena || '-'}</td></tr>
              <tr><td>Tanggal</td><td>: ${r.tanggal ? new Date(r.tanggal).toLocaleDateString('id-ID') : '-'}</td></tr>
              <tr><td>Jam</td><td>: ${r.jam_mulai ? r.jam_mulai.substring(0,5) : '-'} - ${r.jam_selesai ? r.jam_selesai.substring(0,5) : '-'}</td></tr>
            </table>

            <h5 class="mt-4">Detail Pembayaran</h5>
            <table class="table table-sm">
              <tr><td>Metode</td><td>: ${p.metode_pembayaran || r.pembayaran_metode || 'transaksi'}</td></tr>
              <tr><td>Jumlah</td><td>: Rp ${Number(jumlah).toLocaleString('id-ID')}</td></tr>
              <tr><td>Status</td><td>: ${p.status_pembayaran || r.pembayaran_status || '-'}</td></tr>
              <tr><td>Tanggal</td><td>: ${p.tanggal_pembayaran
                ? new Date(p.tanggal_pembayaran).toLocaleString('id-ID')
                : (r.pembayaran_tanggal ? new Date(r.pembayaran_tanggal).toLocaleString('id-ID') : '-')
              }</td></tr>
            </table>
          `;

          // =========================
          // REKENING TUJUAN (DUMMY)
          // =========================
          html += `
            <h5 class="mt-4">Rekening Tujuan</h5>
            <div class="row g-2">
              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>BCA</strong><br>
                  <small>No. Rek: 1234567890</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>
              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>BRI</strong><br>
                  <small>No. Rek: 9876543210</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>
              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>Mandiri</strong><br>
                  <small>No. Rek: 1122334455</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>

              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>BNI</strong><br>
                  <small>No. Rek: 5566778899</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>
              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>BTN</strong><br>
                  <small>No. Rek: 3344556677</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>
              <div class="col-md-4">
                <div class="border rounded p-2 h-100">
                  <strong>Bank Jatim</strong><br>
                  <small>No. Rek: 7788990011</small><br>
                  <small>a.n. Ainur Taufik</small>
                </div>
              </div>
            </div>
          `;

          // cari file bukti
          const buktiFile = p.bukti_pembayaran || r.pembayaran_bukti || null;
          const metodePemb = p.metode_pembayaran || r.pembayaran_metode || 'transaksi';

          if (!buktiFile && metodePemb === 'transaksi') {
            // ==== FORM UPLOAD + PREVIEW + COUNTDOWN ====
            html += `
              <h5 class="mt-4">Upload Bukti Pembayaran</h5>
              <form action="/pemain/upload-bukti/${r.id_reservasi}" method="POST" enctype="multipart/form-data" id="formUploadBukti">
                <input type="file" name="bukti_pembayaran" id="inputBuktiPembayaran" class="form-control mb-3" accept="image/*" required>

                <div class="mb-3 text-center" id="previewWrapper" style="display:none;">
                  <p class="text-muted mb-2">Preview Bukti:</p>
                  <img id="imgPreviewBukti" src="" class="img-fluid rounded shadow" style="max-height:300px;">
                </div>

                <button class="btn btn-primary mb-2">
                  <i class="bi bi-upload"></i> Upload
                </button>
              </form>

              <div class="alert alert-warning py-2" id="uploadCountdownWrapper">
                <i class="bi bi-exclamation-triangle me-1"></i>
                Anda memiliki waktu
                <strong><span id="uploadCountdownTime">20:00</span></strong>
                untuk mengupload bukti pembayaran (dihitung sejak pemesanan dibuat).
              </div>
            `;
          } else if (!buktiFile) {
            // metode bukan transfer, tapi belum ada bukti
            html += `
              <h5 class="mt-4">Upload Bukti Pembayaran</h5>
              <form action="/pemain/upload-bukti/${r.id_reservasi}" method="POST" enctype="multipart/form-data">
                <input type="file" name="bukti_pembayaran" class="form-control mb-3" accept="image/*" required>
                <button class="btn btn-primary">
                  <i class="bi bi-upload"></i> Upload
                </button>
              </form>
            `;
          } else {
            html += `
              <h5 class="mt-4 mb-2">Bukti Pembayaran</h5>
              <div class="text-center mb-3">
                <a href="/uploads/bukti_pembayaran/${buktiFile}" target="_blank">
                  <img src="/uploads/bukti_pembayaran/${buktiFile}" class="img-fluid rounded shadow" style="max-height:400px;">
                </a>
              </div>

              <div class="d-flex gap-2 justify-content-center mb-3">
                <a href="/pemain/download-pdf/${r.id_reservasi}" class="btn btn-success" target="_blank">
                  <i class="bi bi-file-earmark-pdf"></i> Download PDF
                </a>
              </div>
            `;
          }

          const catatan = p.catatan_admin || r.pembayaran_catatan || null;
          if (catatan) {
            html += `
              <div class="mt-3">
                <h6 class="text-muted mb-2">
                  <i class="bi bi-chat-quote me-2"></i>Catatan Admin
                </h6>
                <p class="text-muted fst-italic">${catatan}</p>
              </div>
            `;
          }

          box.innerHTML = html;

          // ====== JS PREVIEW GAMBAR (SETELAH HTML DIMASUKKAN) ======
          const inputBukti = box.querySelector('#inputBuktiPembayaran');
          if (inputBukti) {
            const previewWrapper = box.querySelector('#previewWrapper');
            const imgPreview = box.querySelector('#imgPreviewBukti');

            inputBukti.addEventListener('change', function (e) {
              const file = e.target.files[0];
              if (!file) {
                previewWrapper.style.display = 'none';
                imgPreview.src = '';
                return;
              }

              const reader = new FileReader();
              reader.onload = function (ev) {
                imgPreview.src = ev.target.result;
                previewWrapper.style.display = 'block';
              };
              reader.readAsDataURL(file);
            });
          }

          // ====== COUNTDOWN 20 MENIT ======
          const countdownSpan = box.querySelector('#uploadCountdownTime');
          if (countdownSpan) {
            const TOTAL_DETIK = 20 * 60;
            let sisaDetik = TOTAL_DETIK;

            const startRaw = r.tanggal_pesan || null;
            if (startRaw) {
              const startTime = new Date(startRaw);
              const now = new Date();
              const sudahDetik = Math.floor((now - startTime) / 1000);
              sisaDetik = TOTAL_DETIK - sudahDetik;
            }
            if (sisaDetik < 0) sisaDetik = 0;

            function formatWaktu(sec) {
              const m = Math.floor(sec / 60);
              const s = sec % 60;
              return (m < 10 ? '0' + m : m) + ':' + (s < 10 ? '0' + s : s);
            }

            countdownSpan.textContent = formatWaktu(sisaDetik);

            uploadCountdownInterval = setInterval(() => {
              sisaDetik--;

              if (sisaDetik <= 0) {
                clearInterval(uploadCountdownInterval);
                uploadCountdownInterval = null;
                countdownSpan.textContent = "00:00";

                // Disable input
                const inputFile = box.querySelector('#inputBuktiPembayaran');
                const submitBtn = box.querySelector('#formUploadBukti button[type="submit"]');

                if (inputFile) inputFile.disabled = true;
                if (submitBtn) submitBtn.disabled = true;

                // Tambah pesan otomatis di bawah countdown
                const countdownWrapper = box.querySelector('#uploadCountdownWrapper');
                if (countdownWrapper) {
                  countdownWrapper.innerHTML = `
                    <i class="bi bi-x-circle text-danger"></i>
                    <strong class="text-danger">Batas waktu upload telah habis.</strong><br>
                    <small class="text-danger">Pembayaran otomatis ditolak.</small>
                  `;
                }

                // Beri tahu server untuk auto tolak
                fetch('/pemain/expire-upload/' + r.id_reservasi, {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    reason: 'Batas waktu upload bukti pembayaran telah habis'
                  })
                })
                  .then(res => res.json())
                  .then(j => console.log('Auto reject result:', j))
                  .catch(err => console.error('Auto reject error:', err));

                return;
              }

              countdownSpan.textContent = formatWaktu(sisaDetik);
            }, 1000);
          }
        })
        .catch(err => {
          console.error('Detail pembayaran fetch error:', err);
          box.innerHTML = '<div class="alert alert-danger">Terjadi kesalahan saat memuat data.</div>';
        });
    });

    // Saat modal detail pembayaran DITUTUP, matikan interval countdown
    modalDetailPembayaran.addEventListener('hidden.bs.modal', () => {
      if (uploadCountdownInterval) {
        clearInterval(uploadCountdownInterval);
        uploadCountdownInterval = null;
      }
    });
  }

  // ============================
  // INIT DATATABLE RIWAYAT PEMESANAN
  // ============================
  $(document).ready(function () {
    $('#riwayatTable').DataTable({
      pageLength: 10,
      lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Semua"]],
      order: [[1, 'desc']], // urutkan dari tanggal main terbaru
      columnDefs: [
        { orderable: false, targets: [4, 6] } // kolom Pembayaran & Ulasan tidak di-sort
      ],
      language: {
        lengthMenu: "Tampilkan _MENU_ data per halaman",
        zeroRecords: "Tidak ada data yang cocok",
        info: "Menampilkan _START_ - _END_ dari _TOTAL_ data",
        infoEmpty: "Tidak ada data tersedia",
        infoFiltered: "(difilter dari _MAX_ total data)",
        search: "Cari:",
        paginate: {
          first: "Pertama",
          last: "Terakhir",
          next: "Selanjutnya",
          previous: "Sebelumnya"
        }
      }
    });

    // ============================
    // PAGINATION ULASAN (CLIENT SIDE)
    // ============================
    const ulasanItems = document.querySelectorAll('.ulasan-item');
    const paginationWrapper = document.getElementById('ulasanPagination');
    const prevBtn = document.getElementById('prevUlasan');
    const nextBtn = document.getElementById('nextUlasan');
    const infoSpan = document.getElementById('infoUlasan');
    const PER_PAGE = 5;

    if (ulasanItems.length > PER_PAGE && paginationWrapper && prevBtn && nextBtn && infoSpan) {
      let currentPage = 1;
      const totalItems = ulasanItems.length;
      const totalPages = Math.ceil(totalItems / PER_PAGE);

      function showPage(page) {
        if (page < 1) page = 1;
        if (page > totalPages) page = totalPages;
        currentPage = page;

        ulasanItems.forEach((el, idx) => {
          const start = (currentPage - 1) * PER_PAGE;
          const end = start + PER_PAGE;
          if (idx >= start && idx < end) {
            el.style.display = '';
          } else {
            el.style.display = 'none';
          }
        });

        infoSpan.textContent = `Halaman ${currentPage} dari ${totalPages}`;
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage === totalPages;
      }

      prevBtn.addEventListener('click', () => {
        if (currentPage > 1) showPage(currentPage - 1);
      });

      nextBtn.addEventListener('click', () => {
        if (currentPage < totalPages) showPage(currentPage + 1);
      });

      paginationWrapper.style.display = 'flex';
      showPage(1);
    }
  });
