<%- include('../partials/_header', { title: title }) %>
<%- include('../partials/_messages') %>

<style>
  .profile-card {
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: 0.3s ease;
  }
  .profile-card:hover { transform: translateY(-2px); }
  .profile-header {
    background: linear-gradient(90deg, #28c76f 0%, #23b866 100%);
    color: #fff; text-align: center; padding: 25px 0;
  }
  .profile-header i { font-size: 80px; }
  .profile-header h4 { margin-top: 10px; font-weight: 600; }
  .table thead { background: #28c76f; color: #fff; }
  .table th { font-weight: 600; text-transform: uppercase; font-size: 0.9rem; }
  .card-header { background: #f8f9fa; font-weight: 600; border-bottom: 2px solid #28c76f; }
  .badge { padding: 6px 10px; font-size: 0.85rem; }
</style>

<div class="container py-4">
  <div class="row g-4">
    <!-- PROFIL -->
    <div class="col-md-4">
      <div class="profile-card">
        <div class="profile-header">
          <i class="bi bi-person-circle"></i>
          <h4><%= user.nama %></h4>
          <p class="mb-0"><%= user.email %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>No. HP:</strong> <%= user.no_hp %></li>
          <li class="list-group-item"><strong>Terdaftar:</strong> <%= new Date(user.tanggal_daftar).toLocaleDateString('id-ID') %></li>
        </ul>
      </div>
    </div>

    <!-- RIWAYAT -->
    <div class="col-md-8">
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header"><i class="bi bi-journal-text me-2 text-success"></i> Riwayat Pemesanan (<%= reservasi.length %>)</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>Arena</th><th>Tgl. Main</th><th>Jam</th>
                  <th>Status</th><th>Pembayaran</th><th>Jumlah</th><th>Ulasan</th>
                </tr>
              </thead>
              <tbody>
                <% if (reservasi.length > 0) { %>
                  <% reservasi.forEach(r => { %>
                    <tr>
                      <td><strong><%= r.nama_arena %></strong></td>
                      <td><%= new Date(r.tanggal).toLocaleDateString('id-ID') %></td>
                      <td><%= r.jam_mulai.substring(0,5) %> - <%= r.jam_selesai.substring(0,5) %></td>
                      <td>
                        <% if(r.status == 'selesai') { %><span class="badge bg-success">Selesai</span>
                        <% } else if (r.status == 'disetujui') { %><span class="badge bg-info text-dark">Disetujui</span>
                        <% } else if (r.status == 'menunggu') { %><span class="badge bg-warning text-dark">Menunggu</span>
                        <% } else { %><span class="badge bg-danger">Ditolak</span><% } %>
                      </td>
                      <td>
                        <% if(r.payment_method == 'cod') { %><span class="badge bg-primary">COD</span>
                        <% } else if (r.payment_method == 'midtrans') { %><span class="badge bg-secondary">Midtrans</span>
                        <% } else { %><span class="badge bg-light text-dark">-</span><% } %>
                      </td>
                      <td><%= r.amount > 0 ? 'Rp ' + r.amount.toLocaleString('id-ID') : '-' %></td>

                      <!-- Tombol ulasan pakai modal -->
                      <td>
                        <% if (r.status === 'selesai') { %>
                          <% if (!r.sudah_ulasan) { %>
                            <button class="btn btn-sm btn-success" data-bs-toggle="modal"
                              data-bs-target="#modalUlasan" data-id="<%= r.id_reservasi %>"
                              data-nama="<%= r.nama_arena %>" data-mode="create">
                              <i class="bi bi-star me-1"></i> Beri Ulasan
                            </button>
                          <% } else { %>
                            <button class="btn btn-sm btn-warning text-white" data-bs-toggle="modal"
                              data-bs-target="#modalUlasan" data-id="<%= r.id_reservasi %>"
                              data-nama="<%= r.nama_arena %>" data-mode="edit">
                              <i class="bi bi-pencil-square me-1"></i> Edit
                            </button>
                          <% } %>
                        <% } else { %>
                          <span class="text-muted">-</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr><td colspan="7" class="text-center text-muted">Belum ada riwayat pemesanan.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- RIWAYAT ULASAN -->
      <div class="card shadow-sm border-0">
        <div class="card-header"><i class="bi bi-star-fill me-2 text-warning"></i> Riwayat Ulasan Saya (<%= ulasan.length %>)</div>
        <div class="card-body">
          <% if (ulasan.length > 0) { %>
            <% ulasan.forEach(u => { %>
              <div class="mb-3 border-bottom pb-2">
                <strong><%= u.nama_arena %></strong>
                <div>
                  <% for(let i = 0; i < u.rating; i++) { %><i class="bi bi-star-fill text-warning"></i><% } %>
                  <% for(let i = 0; i < (5 - u.rating); i++) { %><i class="bi bi-star text-warning"></i><% } %>
                </div>
                <p class="mb-0 fst-italic text-muted">"<%= u.komentar %>"</p>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-center text-muted mb-0">Belum ada ulasan.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- === MODAL ULASAN === -->
<div class="modal fade" id="modalUlasan" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formUlasan" method="POST">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Beri Ulasan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="id_reservasi" name="id_reservasi">
          <div class="mb-3">
            <label class="form-label">Arena</label>
            <input type="text" class="form-control" id="nama_arena" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <select class="form-select" name="rating" required>
              <option value="">Pilih Rating</option>
              <% for (let i = 1; i <= 5; i++) { %>
                <option value="<%= i %>"><%= i %> â˜…</option>
              <% } %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Komentar</label>
            <textarea class="form-control" name="komentar" rows="3" placeholder="Tulis komentar Anda..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Simpan</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  // Setup modal ulasan (create/edit)
  const modalUlasan = document.getElementById('modalUlasan');
  modalUlasan.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    const id = button.getAttribute('data-id');
    const nama = button.getAttribute('data-nama');
    const mode = button.getAttribute('data-mode');
    const form = document.getElementById('formUlasan');
    form.reset();
    document.getElementById('nama_arena').value = nama;
    document.getElementById('id_reservasi').value = id;
    form.action = mode === 'edit'
      ? `/pemain/ulasan/update/${id}`
      : `/pemain/ulasan/create/${id}`;
  });
</script>

<%- include('../partials/_footer') %>
