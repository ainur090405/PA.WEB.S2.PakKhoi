<%- include('../partials/_header', { title: title }) %>
<%- include('../partials/_messages') %>

<style>
  .profile-card {
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: 0.3s ease;
  }
  .profile-card:hover { transform: translateY(-2px); }
  .profile-header {
    background: linear-gradient(90deg, #28c76f 0%, #23b866 100%);
    color: #fff; text-align: center; padding: 25px 0;
  }
  .profile-header i { font-size: 80px; }
  .profile-header h4 { margin-top: 10px; font-weight: 600; }
</style>

<div class="container py-4">
  <div class="row justify-content-center">
    <!-- PROFIL -->
    <div class="col-md-6">
      <div class="profile-card">
        <div class="profile-header">
          <i class="bi bi-person-circle"></i>
          <h4><%= user.nama %></h4>
          <p class="mb-0"><%= user.email %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>No. HP:</strong> <%= user.no_hp %></li>
          <li class="list-group-item"><strong>Terdaftar:</strong> <%= new Date(user.tanggal_daftar).toLocaleDateString('id-ID') %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- === MODAL ULASAN === -->
<div class="modal fade" id="modalUlasan" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formUlasan" method="POST">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Beri Ulasan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="id_reservasi" name="id_reservasi">
          <div class="mb-3">
            <label class="form-label">Arena</label>
            <input type="text" class="form-control" id="nama_arena" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <select class="form-select" name="rating" required>
              <option value="">Pilih Rating</option>
              <% for (let i = 1; i <= 5; i++) { %>
                <option value="<%= i %>"><%= i %> â˜…</option>
              <% } %>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Komentar</label>
            <textarea class="form-control" name="komentar" rows="3" placeholder="Tulis komentar Anda..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Simpan</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  // Setup modal ulasan (create/edit)
  const modalUlasan = document.getElementById('modalUlasan');
  modalUlasan.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    const id = button.getAttribute('data-id');
    const nama = button.getAttribute('data-nama');
    const mode = button.getAttribute('data-mode');
    const form = document.getElementById('formUlasan');
    form.reset();
    document.getElementById('nama_arena').value = nama;
    document.getElementById('id_reservasi').value = id;
    form.action = mode === 'edit'
      ? `/pemain/ulasan/update/${id}`
      : `/pemain/ulasan/create/${id}`;
  });
</script>

<%- include('../partials/_footer') %>
