<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | ArenaGo</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/stylesheets/header.css">

  <style>
    /* Dropdown notifikasi lebih kecil & bisa scroll */
    .notif-dropdown-menu {
      width: 380px;
      max-height: 320px;
      overflow-y: auto;
    }

    .notif-dropdown-menu .dropdown-item {
      white-space: normal;
    }

    .notif-item-title {
      font-size: 0.9rem;
    }

    .notif-item-text {
      font-size: 0.8rem;
    }

    /* Modal detail notifikasi lebih ramping dan bisa scroll */
    #notificationModal .modal-dialog {
      max-width: 600px;
    }

    #notificationModal .modal-body {
      max-height: 60vh;
      overflow-y: auto;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
  <div class="container">
    
    <a class="navbar-brand fw-bold" href="/">
      <i class="bi bi-dribbble me-2"></i> Arena<span class="text-success">Go</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        
        <% if (user && user.role === 'admin') { %>
          <!-- MENU ADMIN -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-database-fill-gear me-1"></i> Master Manajemen
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/admin/dashboard">Dashboard</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/users">Manajemen User</a></li>
              <li><a class="dropdown-item" href="/arena">Manajemen Arena</a></li>
              <li><a class="dropdown-item" href="/jadwal">Manajemen Jadwal</a></li>
              <li><a class="dropdown-item" href="/admin/reservasi">Manajemen Reservasi</a></li>
              <li><a class="dropdown-item" href="/admin/pembayaran">Manajemen Pembayaran</a></li>
            </ul>
          </li>

        <% } else { %>
          <!-- MENU UNTUK PEMAIN / PENGUNJUNG -->
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/venues">Cari Arena</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/pemain/riwayat-ulasan">Riwayat & Ulasan</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/activity">
              <i class="bi bi-heart-pulse me-1"></i> Activity
            </a>
          </li>
        <% } %>

      </ul>

      <ul class="navbar-nav ms-auto">
        <% if (user) { %>
          <% if (user.role === 'pemain') { %>
            <!-- Notifikasi untuk Pemain -->
            <li class="nav-item dropdown">
              <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-bell-fill"></i>
                <% if (unreadCount > 0) { %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= unreadCount %>
                    <span class="visually-hidden">unread messages</span>
                  </span>
                <% } %>
              </a>

              <!-- DROPDOWN NOTIF -->
              <ul class="dropdown-menu dropdown-menu-end notif-dropdown-menu">
                <li><h6 class="dropdown-header">Notifikasi</h6></li>

                <% if (notifications && notifications.length > 0) { %>
                  <% notifications.slice(0, 10).forEach(notif => { %>
                    <li>
                      <a
                        class="dropdown-item <%= notif.dibaca ? '' : 'fw-bold' %>"
                        href="#"
                        data-id="<%= notif.id_notifikasi %>"
                        data-judul="<%- (notif.judul || '').replace(/"/g, '&quot;') %>"
                        data-pesan="<%- (notif.isi_pesan || '').replace(/"/g, '&quot;') %>"
                        data-tanggal="<%= notif.tanggal_kirim ? new Date(notif.tanggal_kirim).toLocaleDateString('id-ID') : '' %>"
                        onclick="openNotificationFromDropdown(this); return false;"
                      >
                        <div class="d-flex">
                          <div class="flex-grow-1">
                            <div class="fw-semibold notif-item-title"><%= notif.judul %></div>
                            <small class="text-muted notif-item-text"><%= notif.isi_pesan %></small>
                            <div class="small text-muted mt-1">
                              <%= notif.tanggal_kirim ? new Date(notif.tanggal_kirim).toLocaleDateString('id-ID') : '' %>
                            </div>
                          </div>
                          <% if (!notif.dibaca) { %>
                            <div class="align-self-start">
                              <span class="badge bg-primary rounded-pill">Baru</span>
                            </div>
                          <% } %>
                        </div>
                      </a>
                    </li>
                  <% }) %>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item text-center" href="/pemain/riwayat-ulasan">Lihat Semua</a></li>
                <% } else { %>
                  <li><a class="dropdown-item text-center text-muted" href="#">Belum ada notifikasi</a></li>
                <% } %>
              </ul>
            </li>
          <% } %>

          <!-- PROFIL / LOGOUT -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-fill me-1"></i> Halo, <%= user.nama %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <% if (user.role === 'pemain') { %>
                <li>
                  <a class="dropdown-item" href="/pemain/profile">
                    <i class="bi bi-person-circle me-2"></i> Profil Saya
                  </a>
                </li>
              <% } %>
              <% if (user.role === 'admin') { %>
                <li>
                  <a class="dropdown-item" href="/admin/dashboard">
                    <i class="bi bi-person-gear me-2"></i> Dashboard
                  </a>
                </li>
              <% } %>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item text-danger" href="/auth/logout">
                  <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
              </li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-success btn-sm" href="/auth/register">Register</a>
          </li>
        <% } %>
      </ul>

    </div>
  </div>
</nav>

<!-- Modal untuk Detail Notifikasi -->
<div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="notificationModalLabel">Detail Notifikasi</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <h6 id="modalNotificationTitle" class="fw-bold"></h6>
        </div>
        <div class="mb-3">
          <p id="modalNotificationMessage" class="mb-2"></p>
        </div>
        <div class="text-muted small">
          <i class="bi bi-calendar-event me-1"></i>
          <span id="modalNotificationDate"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
        <button type="button" class="btn btn-primary" id="markAsReadBtn" onclick="markAsReadAndClose()">Tandai Sudah Dibaca</button>
      </div>
    </div>
  </div>
</div>

<script>
  // Dipanggil dari onclick di dropdown (pakai data-* supaya tidak ribet escape string)
  function openNotificationFromDropdown(el) {
    const id       = el.dataset.id;
    const judul    = el.dataset.judul || '';
    const pesan    = el.dataset.pesan || '';
    const tanggal  = el.dataset.tanggal || '';

    if (typeof showNotificationModal === 'function') {
      showNotificationModal(id, judul, pesan, tanggal);
    } else {
      console.warn('showNotificationModal() belum didefinisikan.');
    }
  }
</script>

<main class="container my-4">
