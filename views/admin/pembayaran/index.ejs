<%- include('../../partials/_header', { title: title }) %>
<%- include('../../partials/_messages') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="fw-bold text-primary mb-1">
      <i class="bi bi-cash-coin me-2"></i><%= title %>
    </h2>
    <p class="text-muted mb-0">Kelola konfirmasi pembayaran dari pengguna</p>
  </div>

  <!-- Jumlah pending (status_pembayaran = 'unpaid' atau 'pending') -->
  <div class="text-end">
    <span class="badge fs-6 px-3 py-2" style="background: linear-gradient(135deg,#667eea,#764ba2);">
      <i class="bi bi-clock me-1"></i>
      <%= data.filter(p => p.status_pembayaran === 'unpaid' || p.status_pembayaran === 'pending').length %> Pending
    </span>
  </div>
</div>

<div class="card shadow-sm border-0" style="border-radius:20px; overflow:hidden;">
  <div class="card-body">

    <!-- FILTER BAR DATATABLE -->
    <div class="row mb-3">
      <div class="col-md-3 mb-2">
        <label class="form-label mb-1">Filter Metode</label>
        <select id="filterMetodePembayaran" class="form-select form-select-sm">
          <option value="">Semua Metode</option>
          <option value="COD">COD</option>
          <option value="Transfer">Transfer</option>
        </select>
      </div>
      <div class="col-md-3 mb-2">
        <label class="form-label mb-1">Filter Status</label>
        <select id="filterStatusPembayaran" class="form-select form-select-sm">
          <option value="">Semua Status</option>
          <option value="Menunggu">Menunggu</option>
          <option value="Dikonfirmasi">Dikonfirmasi</option>
          <option value="Ditolak">Ditolak</option>
        </select>
      </div>
    </div>

    <div class="table-responsive">
      <table id="pembayaranTable" class="table table-hover align-middle mb-0">
        <thead style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
          <tr>
            <th class="ps-4 py-3">ID</th>
            <th class="py-3">Pemesan</th>
            <th class="py-3">Arena</th>
            <th class="py-3">Metode</th>
            <th class="py-3">Jumlah</th>
            <th class="py-3">Tanggal</th>
            <th class="py-3">Bukti</th>
            <th class="py-3">Status</th>
            <th class="py-3 pe-4">Aksi</th>
          </tr>
        </thead>

        <tbody>
          <% data.forEach(p => { %>
            <tr style="border-bottom:1px solid #f1f3f4;">

              <td class="ps-4 fw-semibold text-primary">#<%= p.id_pembayaran %></td>

              <td>
                <div class="d-flex align-items-center">
                  <div style="width:35px;height:35px;border-radius:50%;background:linear-gradient(135deg,#667eea,#764ba2);display:grid;place-items:center;margin-right:10px;">
                    <i class="bi bi-person-fill text-white"></i>
                  </div>
                  <%= p.nama_user %>
                </div>
              </td>

              <td><strong><%= p.nama_arena %></strong></td>

              <!-- METODE -->
              <td>
                <% if (p.metode_pembayaran === 'cod') { %>
                  <span class="badge bg-primary">COD</span>
                <% } else { %>
                  <span class="badge bg-secondary">Transfer</span>
                <% } %>
              </td>

              <!-- JUMLAH -->
              <td class="fw-bold text-success" data-order="<%= Number(p.jumlah) || 0 %>">
                Rp <%= Number(p.jumlah).toLocaleString('id-ID') %>
              </td>

              <!-- TANGGAL -->
              <td data-order="<%= new Date(p.tanggal_pembayaran).getTime() %>">
                <small class="text-muted">
                  <%= new Date(p.tanggal_pembayaran).toLocaleDateString('id-ID') %>
                </small>
              </td>

              <!-- BUKTI -->
              <td>
                <% if (p.bukti_pembayaran) { %>
                  <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#buktiModal<%= p.id_pembayaran %>">
                    <i class="bi bi-image me-1"></i> Lihat
                  </button>
                <% } else { %>
                  <span class="text-muted small">Belum upload</span>
                <% } %>
              </td>

              <!-- STATUS -->
              <td>
                <% if (p.status_pembayaran === 'paid' || p.status_pembayaran === 'confirmed') { %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle me-1"></i> Dikonfirmasi
                  </span>
                <% } else if (p.status_pembayaran === 'unpaid' || p.status_pembayaran === 'pending') { %>
                  <span class="badge bg-warning text-dark">
                    <i class="bi bi-clock me-1"></i> Menunggu
                  </span>
                <% } else { %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1"></i> Ditolak
                  </span>
                <% } %>
              </td>

              <!-- AKSI: FORM BIASA TANPA MODAL -->
              <td class="pe-4">
                <% if (p.status_pembayaran === 'unpaid' || p.status_pembayaran === 'pending') { %>

                  <!-- FORM KONFIRMASI -->
                  <form action="/admin/pembayaran/confirm/<%= p.id_pembayaran %>" method="POST" style="display:inline;">
                    <input type="hidden" name="catatan_admin" value="">
                    <button type="submit" class="btn btn-sm btn-success me-1">
                      <i class="bi bi-check-circle me-1"></i>Konfirmasi
                    </button>
                  </form>

                  <!-- FORM TOLAK -->
                  <form action="/admin/pembayaran/reject/<%= p.id_pembayaran %>" method="POST" style="display:inline;">
                    <input type="hidden" name="catatan_admin" value="Ditolak oleh admin">
                    <button type="submit" class="btn btn-sm btn-danger">
                      <i class="bi bi-x-circle me-1"></i>Tolak
                    </button>
                  </form>

                <% } else { %>
                  <span class="text-muted small">-</span>
                <% } %>
              </td>

            </tr>

            <!-- ========== MODAL BUKTI (TETAP) ========== -->
            <div class="modal fade" id="buktiModal<%= p.id_pembayaran %>" tabindex="-1">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">

                  <div class="modal-header">
                    <h5 class="modal-title">Bukti Pembayaran #<%= p.id_pembayaran %></h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                  </div>

                  <div class="modal-body text-center">
                    <% if (p.bukti_pembayaran) { %>
                      <img src="/uploads/bukti_pembayaran/<%= p.bukti_pembayaran %>"
                           class="img-fluid rounded shadow"
                           style="max-height:500px;">
                      <p class="mt-2 text-muted">Pengguna: <strong><%= p.nama_user %></strong></p>
                      <p class="text-muted">Arena: <strong><%= p.nama_arena %></strong></p>
                    <% } else { %>
                      <p class="text-muted">Tidak ada bukti.</p>
                    <% } %>
                  </div>

                  <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                  </div>

                </div>
              </div>
            </div>

          <% }) %>
        </tbody>

      </table>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // INIT DATATABLE
    const table = $('#pembayaranTable').DataTable({
      pageLength: 10,
      lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Semua"]],
      order: [[5, 'desc']], // tanggal pembayaran
      columnDefs: [
        { orderable: false, targets: [6, 8] }, // Bukti & Aksi
        { type: 'num', targets: 4 }            // Jumlah numeric
      ],
      language: {
        lengthMenu: "Tampilkan _MENU_ data per halaman",
        zeroRecords: "Tidak ada data yang ditemukan",
        info: "Menampilkan _START_ - _END_ dari _TOTAL_ data",
        infoEmpty: "Tidak ada data tersedia",
        infoFiltered: "(difilter dari _MAX_ total data)",
        search: "Cari:",
        paginate: {
          first: "Pertama",
          last: "Terakhir",
          next: "Selanjutnya",
          previous: "Sebelumnya"
        }
      }
    });

    // INDEX KOLOM:
    // 0 ID, 1 Pemesan, 2 Arena, 3 Metode, 4 Jumlah,
    // 5 Tanggal, 6 Bukti, 7 Status, 8 Aksi

    // FILTER METODE (kolom 3) – berdasarkan teks badge: "COD" / "Transfer"
    document.getElementById('filterMetodePembayaran').addEventListener('change', function () {
      const val = this.value; // COD / Transfer / ''
      if (val) {
        table.column(3).search(val, false, false).draw();
      } else {
        table.column(3).search('', false, false).draw();
      }
    });

    // FILTER STATUS (kolom 7) – teks badge: Menunggu / Dikonfirmasi / Ditolak
    document.getElementById('filterStatusPembayaran').addEventListener('change', function () {
      const val = this.value;
      if (val) {
        table.column(7).search(val, false, false).draw();
      } else {
        table.column(7).search('', false, false).draw();
      }
    });
  });
</script>

<%- include('../../partials/_footer') %>
