<%- include('../../partials/_header', { title: title }) %>

<%- include('../../partials/_messages') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="bi bi-people-fill"></i> <%= title %></h2>
  <a href="/users/create" class="btn btn-primary">
    <i class="bi bi-plus-circle me-2"></i> Tambah User Baru
  </a>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>No. HP</th>
            <th>Role</th>
            <th>Tgl. Daftar</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(user => { %>
            <tr>
              <td><%= user.id_user %></td>
              <td><%= user.nama %></td>
              <td><%= user.email %></td>
              <td><%= user.no_hp %></td>
              <td>
                <% if (user.role === 'admin') { %>
                  <span class="badge bg-success">Admin</span>
                <% } else { %>
                  <span class="badge bg-secondary">Pemain</span>
                <% } %>
              </td>
              <td><%= new Date(user.tanggal_daftar).toLocaleDateString('id-ID') %></td>
              <td>
                <a href="/users/edit/<%= user.id_user %>" class="btn btn-sm btn-outline-warning">
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <a href="/users/delete/<%= user.id_user %>" class="btn btn-sm btn-outline-danger" 
                   onclick="return confirm('Yakin hapus user <%= user.nama %>?')">
                  <i class="bi bi-trash-fill"></i>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../../partials/_footer') %>