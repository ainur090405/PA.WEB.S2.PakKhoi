<%- include('../../partials/_header', { title: title }) %>
<%- include('../../partials/_messages') %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">
      <i class="bi bi-dribbble"></i> <%= title %>
    </h2>
    <a href="/arena/create" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i> Tambah Arena Baru
    </a>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">

      <!-- ========== FILTER BAR ATAS TABEL ========== -->
      <div class="row mb-3">
        <!-- Filter Jenis Olahraga -->
        <div class="col-md-4 mb-2">
          <label class="form-label mb-1">Filter Jenis Olahraga</label>
          <select id="filterJenisOlahraga" class="form-select form-select-sm">
            <option value="">Semua Jenis</option>
            <% 
              // ambil jenis_olahraga unik dari data
              const __jenisSet = {};
              data.forEach(a => {
                if (a.jenis_olahraga) __jenisSet[a.jenis_olahraga] = true;
              });
              Object.keys(__jenisSet).forEach(jn => { 
            %>
              <option value="<%= jn %>"><%= jn %></option>
            <% }); %>
          </select>
        </div>

        <!-- Filter Status -->
        <div class="col-md-4 mb-2">
          <label class="form-label mb-1">Filter Status</label>
          <select id="filterStatusArena" class="form-select form-select-sm">
            <option value="">Semua Status</option>
            <!-- nilai disamakan dengan teks di badge: Aktif / Perbaikan -->
            <option value="Aktif">Aktif</option>
            <option value="Perbaikan">Perbaikan</option>
          </select>
        </div>
      </div>
      <!-- ========== END FILTER BAR ========== -->

      <div class="table-responsive">
        <table id="arenaTable" class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Foto</th>
              <th>Nama Arena</th>
              <th>Jenis Olahraga</th>
              <th>Lokasi</th>
              <th>Harga</th>
              <th>Jam Buka - Tutup</th>
              <th>Status</th>
              <th style="width:150px;">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% if (data.length > 0) { %>
              <% data.forEach(arena => { %>
                <tr>
                  <td>
                    <% if (arena.foto_cover) { %>
                      <img
                        src="<%= arena.foto_cover %>"
                        alt="<%= arena.nama_arena %>"
                        class="rounded"
                        style="width: 100px; height: 60px; object-fit: cover;"
                      >
                    <% } else { %>
                      <span class="text-muted small">No Foto</span>
                    <% } %>
                  </td>
                  <td><strong><%= arena.nama_arena %></strong></td>
                  <td><%= arena.jenis_olahraga %></td>
                  <td><%= arena.lokasi %></td>
                  <td data-order="<%= arena.harga %>">
                    Rp <%= new Intl.NumberFormat('id-ID').format(arena.harga) %>
                  </td>
                  <td><%= arena.jam_buka.substring(0,5) %> - <%= arena.jam_tutup.substring(0,5) %></td>
                  <td>
                    <% if (arena.status === 'aktif') { %>
                      <span class="badge bg-success">Aktif</span>
                    <% } else { %>
                      <span class="badge bg-danger">Perbaikan</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <a href="/arena/edit/<%= arena.id_arena %>"
                         class="btn btn-sm btn-outline-warning" title="Edit Arena">
                        <i class="bi bi-pencil-fill"></i>
                      </a>
                      <a href="/foto/manage/<%= arena.id_arena %>"
                         class="btn btn-sm btn-outline-primary" title="Kelola Foto">
                        <i class="bi bi-images"></i>
                      </a>
                      <a href="/arena/delete/<%= arena.id_arena %>"
                         class="btn btn-sm btn-outline-danger"
                         onclick="return confirm('Yakin hapus arena <%= arena.nama_arena %>?')"
                         title="Hapus Arena">
                        <i class="bi bi-trash-fill"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="8" class="text-center text-muted py-4">
                  <i class="bi bi-exclamation-circle"></i> Belum ada data arena.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const table = $('#arenaTable').DataTable({
        pageLength: 10,
        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
        order: [[1, 'asc']], // sort Nama Arena
        columnDefs: [
          { orderable: false, targets: [0, 7] }, // Foto & Aksi
          { type: "num", targets: 4 }            // Harga numeric
        ],
        language: {
          lengthMenu: "Tampilkan _MENU_ data per halaman",
          zeroRecords: "Tidak ada data yang ditemukan",
          info: "Menampilkan _START_ - _END_ dari _TOTAL_ data",
          infoEmpty: "Tidak ada data tersedia",
          infoFiltered: "(difilter dari _MAX_ total data)",
          search: "Cari:",
          paginate: {
            first: "Pertama",
            last: "Terakhir",
            next: "Selanjutnya",
            previous: "Sebelumnya"
          }
        }
      });

      // INDEX KOLOM:
      // 0: Foto, 1: Nama Arena, 2: Jenis Olahraga, 3: Lokasi,
      // 4: Harga, 5: Jam, 6: Status, 7: Aksi

      // === FILTER JENIS OLAHRAGA (kolom 2) ===
      const filterJenis = document.getElementById('filterJenisOlahraga');
      if (filterJenis) {
        filterJenis.addEventListener('change', function () {
          const val = this.value;
          if (val) {
            table.column(2).search('^' + $.fn.dataTable.util.escapeRegex(val) + '$', true, false).draw();
          } else {
            table.column(2).search('', true, false).draw();
          }
        });
      }

      // === FILTER STATUS (kolom 6) ===
      const filterStatus = document.getElementById('filterStatusArena');
      if (filterStatus) {
        filterStatus.addEventListener('change', function () {
          const val = this.value; // Aktif / Perbaikan
          if (val) {
            // teks di badge juga "Aktif"/"Perbaikan", jadi cukup search biasa
            table.column(6).search(val, false, false).draw();
          } else {
            table.column(6).search('', false, false).draw();
          }
        });
      }
    });
  </script>
</div>

<%- include('../../partials/_footer') %>
