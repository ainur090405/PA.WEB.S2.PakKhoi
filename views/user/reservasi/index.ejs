<%- include('../../partials/_header', { title: title }) %>
<%- include('../../partials/_messages') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="bi bi-calendar-check"></i> <%= title %></h2>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <% if (data.length === 0) { %>
      <p class="text-muted text-center">Belum ada reservasi.</p>
    <% } else { %>
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Arena</th>
            <th>Tanggal Main</th>
            <th>Jam</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(r => { %>
            <tr>
              <td><%= r.nama_arena %></td>
              <td><%= new Date(r.tanggal).toLocaleDateString('id-ID') %></td>
              <td><%= r.jam_mulai.substring(0,5) %> - <%= r.jam_selesai.substring(0,5) %></td>
              <td>
                <% if (r.status == 'menunggu') { %>
                  <span class="badge bg-warning text-dark">Menunggu</span>
                <% } else if (r.status == 'disetujui') { %>
                  <span class="badge bg-info">Disetujui</span>
                <% } else if (r.status == 'selesai') { %>
                  <span class="badge bg-success">Selesai</span>
                <% } else { %>
                  <span class="badge bg-danger">Ditolak</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>

<%- include('../../partials/_footer') %>
