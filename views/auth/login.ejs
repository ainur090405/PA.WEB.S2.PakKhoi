<%- include('../partials/_header', { title: title }) %>

<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        
        <div class="text-center mb-4">
          <i class="bi bi-dribbble fs-1 text-primary"></i>
          <h3 class="card-title mb-1">Login ke ArenaGo</h3>
          <p class="text-muted">Silakan masukkan akun Anda.</p>
        </div>
        
        <%- include('../partials/_messages') %>

        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input 
              type="email" 
              class="form-control" 
              id="email" 
              name="email" 
              required>
          </div>

          <div class="mb-1">
            <label for="password" class="form-label">Password</label>
            <input 
              type="password" 
              class="form-control" 
              id="password" 
              name="password" 
              required>
          </div>

          <!-- âœ¨ LUPA PASSWORD (BARU DITAMBAHKAN) -->
          <div class="text-end mb-3">
            <a href="/auth/lupa-password" class="small text-primary">Lupa password?</a>
          </div>

          <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
          </div>
        </form>
        
        <hr class="my-4">
        
        <p class="text-center text-muted mb-0">
          Belum punya akun? 
          <a href="/auth/register" class="fw-bold">Daftar di sini</a>
        </p>

      </div>
    </div>

  </div>
</div>

<%- include('../partials/_footer') %>
